
@{
    ViewBag.Title = "Login";
}
<div class="login-box">

    <div class="login-text"> 
        <b>Login</b>
    </div>

    <div class="login-box-body">
        <form id="login-form" method="POST">
            <div class="form-group has-feedback">
                <input type="text" class="form-control" name="Email" placeholder="Email" required autofocus>
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" name="Password" placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat" name="login" id="login">Sign In</button>
                </div>
                <div id="log-in-callout" class="callout callout-default display-none"><p><i class="fa fa-spinner fa-spin"></i> logging in....</p></div>
                <div id="error-callout" class="callout callout-error display-none"><p id="error-message"></p></div>
            </div>
        </form>
        
    </div>
</div>

